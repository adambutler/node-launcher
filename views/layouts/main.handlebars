
<!DOCTYPE html>
<html>
<head>
  <title></title>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="//js.pusher.com/2.2/pusher.min.js" type="text/javascript"></script>

  <style type="text/css">
    video {
        width: 200px;
    }

    #localVideo {
        position: absolute;
        right: 20px;
        bottom: 20px;
        z-index: 1;
    }

    #remoteVideos {
        position: absolute;
        top: 0; right: 0; bottom: 0; left: 0;
        display: flex;
        flex-wrap: no-wrap;
        background: #eee;
    }

    #remoteVideos video {
        flex-grow: 1;
    }
  </style>
</head>
<body>
  <video id="localVideo" autoplay></video>
  <div id="remoteVideos"></div>
  <script type="text/javascript" src="http://cdn.icecomm.io/icecomm.js"></script>

  <script type="text/javascript">
    window.comm = new Icecomm('ORnC9OEFzUqeqKVGVhudFgVrudqLjUYPeWQZ8WWUFI7fpNlW');

    comm.connect('simpleweb', {audio: true});

    comm.on('connected', function(options) {
       document.getElementById("remoteVideos").appendChild(options.video);
    });

    comm.on('local', function(options) {
      localVideo.src = options.stream;
    });

    comm.on('disconnect', function(options) {
      document.getElementById(options.callerID).remove();
    });
  </script>

  {{{ body }}}
</body>
</html>
